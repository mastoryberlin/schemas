{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "patternProperties": {
    "^\\w+$": {
      "type": "object",
      "properties": {
        "description": {
          "type": "string",
          "maxLength": 250
        },
        "parameters": {
          "$ref": "http://json-schema.org/draft-07/schema#"
        }
      },
      "required": [
        "description"
      ]
    }
  }
}