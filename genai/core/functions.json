{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "patternProperties": {
    "^\\w+$": {
      "type": "object",
      "properties": {
        "description": {
          "type": "string",
          "maxLength": 250
        },
        "parameters": {
          "type": "object",
          "patternProperties": {
            "^\\w+$": {
              "type": "object",
              "properties": {
                "type": {
                  "enum": [
                    "string",
                    "number",
                    "boolean",
                    "object",
                    "array"
                  ]
                }
              }
            }
          }
        }
      },
      "required": [
        "description"
      ]
    }
  }
}