{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://mastory.io/schemas/content/story.json",
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string"
    },
    "unit": {
      "type": "string",
      "pattern": "^\\w+$"
    },
    "public": {
      "type": "boolean",
      "default": true
    },
    "prepares": {
      "type": "boolean",
      "default": true
    },
    "title": {
      "type": "string",
      "minLength": 1
    }
  },
  "additionalProperties": false,
  "required": []
}