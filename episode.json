{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://mastory.io/schemas/content/story.json",
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string"
    },
    "unit": {
      "type": "string",
      "pattern": "^\\w+$"
    },
    "public": {
      "type": "boolean",
      "default": true
    },
    "prepares": {
      "type": "boolean",
      "default": true
    },
    "reentryPoints": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "unit": {
            "type": "string"
          },
          "requires": {
            "type": "object",
            "properties": {
              "levelFinished": {
                "description": "The fragment ID of a Level that needs to be completed for this reentry point.",
                "type": "string"
              }
            },
            "additionalProperties": false
          }
        },
        "required": [
          "unit"
        ],
        "additionalProperties": false
      }
    },
    "title": {
      "type": "string",
      "minLength": 1
    },
    "thumbnailUrl": {
      "type": "string",
      "pattern": "\\w+://\\w+"
    },
    "thumbnailPosition": {
      "type": "string",
      "pattern": "(?:\\d+(?:%|px|em|in|cm)|left|center|right) (?:\\d+(?:%|px|em|in|cm)|top|center|bottom)"
    }
  },
  "additionalProperties": false,
  "required": [
    "unit",
    "title",
    "thumbnailUrl"
  ]
}