{
  "$schema": "http://json-schema.org/draft-07/schema",
  "type": "object",
  "allOf": [
    {
      "allOf": [
        {
          "properties": {
            "id": {
              "$ref": "./identifier.json"
            },
            "support": {
              "oneOf": [
                {
                  "type": "string"
                },
                {
                  "type": "object",
                  "patternProperties": {
                    "^S_": {
                      "type": "object",
                      "properties": {
                        "order": {
                          "type": "number"
                        },
                        "flow": {
                          "type": "string"
                        },
                        "text": {
                          "type": "string"
                        },
                        "inheritFrom": {
                          "type": "string"
                        },
                        "noNeedIndicatesProficiencyIn": {
                          "type": "array",
                          "items": {
                            "type": "object"
                          }
                        }
                      }
                    }
                  }
                }
              ]
            }
          },
          "required": [
            "id"
          ]
        },
        {
          "properties": {
            "backgroundImage": {
              "type": "object",
              "properties": {
                "src": {
                  "type": "string"
                },
                "size": {
                  "type": "string"
                },
                "repeat": {
                  "type": "string"
                },
                "position": {
                  "type": "string"
                }
              },
              "required": [
                "src"
              ]
            },
            "absolute": {
              "type": "object",
              "properties": {
                "left": {
                  "type": "number"
                },
                "top": {
                  "type": "number"
                },
                "right": {
                  "type": "number"
                },
                "bottom": {
                  "type": "number"
                }
              }
            },
            "highlighted": {
              "type": "boolean"
            },
            "span": {
              "type": "number"
            },
            "childrenLayout": {
              "type": "string",
              "enum": [
                "horizontal",
                "vertical",
                "auto"
              ]
            }
          }
        }
      ]
    },
    {
      "properties": {
        "text": {
          "type": "string"
        }
      },
      "required": [
        "text"
      ]
    },
    {
      "properties": {
        "label": {
          "oneOf": [
            {
              "description": "A label text displayed next to this UI element. To customize the text position, set `label` to an object and use the `position` subproperty.",
              "type": "string"
            },
            {
              "type": "object",
              "properties": {
                "text": {
                  "description": "A label text displayed next to this UI element. You can customize its position with the `position` property.",
                  "type": "string",
                  "default": ""
                },
                "hidden": {
                  "type": "boolean",
                  "default": false
                },
                "position": {
                  "type": "string",
                  "enum": [
                    "left",
                    "right",
                    "top",
                    "bottom"
                  ],
                  "description": "Determines the position of the label text relative to the UI element."
                }
              },
              "required": [
                "text"
              ]
            }
          ]
        }
      }
    }
  ]
}