{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "allOf": [
    {
      "properties": {
        "layout": {
          "type": "string",
          "enum": [
            "grid",
            "stack",
            "equal-spacing"
          ]
        },
        "direction": {
          "type": "string",
          "enum": [
            "row",
            "column"
          ]
        },
        "gap": {
          "type": "number"
        }
      }
    }
  ]
}