{
  "properties": {
    "tool": {
      "type": "string",
      "examples": [
        "myToolId"
      ]
    },
    "targetFlow": {
      "type": "string",
      "pattern": "^\\w+(?:\\.flow)?$",
      "examples": [
        "myFlow",
        "coolStory.flow"
      ]
    },
    "unmountToolWhenDone": {
      "type": "boolean",
      "default": true
    }
  },
  "required": [
    "tool",
    "targetFlow"
  ]
}