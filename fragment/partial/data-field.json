{
  "$schema": "http://json-schema.org/draft-07/schema",
  "oneOf": [
    {
      "$ref": "./data-type.json"
    },
    {
      "type": "object",
      "properties": {
        "type": {
          "$ref": "./data-type.json"
        },
        "value": true,
        "comment": {
          "type": "string",
          "pattern": "^[A-Z].*\\.$"
        }
      },
      "required": [
        "type"
      ],
      "unevaluatedProperties": false
    }
  ]
}