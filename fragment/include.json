{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$defs": {
    "jsoncFile": {
      "type": "string",
      "pattern": "^(?:\\.\\.?/)?[\\w\\d-_]+(?:/[\\w\\d-_]+)?(?:\\.jsonc)?$"
    },
    "include": {
      "oneOf": [
        {
          "$ref": "#/$defs/jsoncFile"
        },
        {
          "type": "object",
          "properties": {
            "src": {
              "$ref": "#/$defs/jsoncFile"
            },
            "idPrefix": {
              "type": "string"
            },
            "idSuffix": {
              "oneOf": [
                {
                  "type": "string"
                },
                {
                  "type": "number"
                }
              ]
            },
            "insertionOrder": {
              "type": "string",
              "enum": [
                "beforeOtherChildren",
                "afterOtherChildren"
              ]
            }
          },
          "required": [
            "src"
          ],
          "additionalProperties": false
        }
      ]
    }
  },
  "oneOf": [
    {
      "$ref": "#/$defs/include"
    },
    {
      "type": "array",
      "items": {
        "$ref": "#/$defs/include"
      }
    }
  ]
}