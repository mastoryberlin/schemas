{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$defs": {
    "jsoncFile": {
      "type": "string",
      "pattern": "^(?:\\./)?[\\w\\d-_]+(?:/[\\w\\d-_]+)?(?:\\.jsonc?)?$"
    }
  },
  "type": "object",
  "properties": {
    "include": {
      "oneOf": [
        {
          "$ref": "#/$defs/jsoncFile"
        },
        {
          "type": "array",
          "items": {
            "$ref": "#/$defs/jsoncFile"
          }
        }
      ]
    }
  }
}