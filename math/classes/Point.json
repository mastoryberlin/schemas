{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "array",
  "items": [
    {
      "const": "Point"
    },
    {
      "type": "object",
      "properties": {
        "id": true,
        "tags": true,
        "value": {
          "type": "array",
          "items": {
            "type": "number"
          },
          "minItems": 2
        },
        "meta": {
          "type": "object",
          "properties": {
            "color": {
              "$ref": "../../core/color.json"
            }
          }
        }
      }
    }
  ]
}