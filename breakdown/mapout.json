{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "patternProperties": {
    "\\w+": {
      "type": "object",
      "allOf": [
        {
          "properties": {
            "apps": {
              "type": "array",
              "items": {
                "type": "string",
                "enum": [
                  "home",
                  "wire",
                  "messenger",
                  "log"
                ]
              },
              "minItems": 1,
              "uniqueItems": true
            },
            "format": {
              "enum": [
                "call",
                "chat",
                "call or chat",
                "wireIA"
              ]
            },
            "assets": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          }
        },
        {
          "oneOf": [
            {
              "properties": {
                "type": {
                  "const": "storyPiece"
                },
                "category": {
                  "enum": [
                    "subflow",
                    "video"
                  ]
                },
                "role": {
                  "enum": [
                    "learningStoryFacts",
                    "havingMoreOptions"
                  ]
                },
                "storyElements": {
                  "type": "array",
                  "items": {
                      "type": "string"
                  }
                },
                "marker": {
                  "type": "string"
                },
                "description": {
                  "type": "string",
                  "format": "style"
                }
              }
            },
            {
                "properties": {
                    "type": {
                        "const": "storyElement"
                    },
                    "category": {
                        "enum": [
                            "subflow",
                            "subsubflow"
                        ]
                    },
                    "role": {
                        "enum": [
                            "learningStoryFacts",
                            "havingMoreOptions"
                        ]
                    },
                    "storyPiece": {
                        "type": "string"
                    },
                    "marker": {
                        "type": "string"
                    },
                    "description": {
                        "type": "string",
                        "format": "style"
                    }
                }
            },
            {
              "properties": {
                "type": {
                  "const": "joint"
                },
                "category": {
                  "enum": [
                    "subflow",
                    "subsubflow"
                  ]
                },
                "role": {
                  "enum": [
                    "continuity"
                  ]
                },
                "callNr": {
                  "type":"number"
                },
                "npcs": {
                  "type": "array",
                  "items": {
                    "enum": [
                      "Nick",
                      "VZ",
                      "Alicia"
                    ]
                  }
                }, 
                "extra": {
                  "type":"string"
                }
              }
            },
            {
              "properties": {
                "type": {
                  "const": "decision"
                },
                "name": {
                  "type": "string"
                },
                "format": {
                  "type": "string"
                },
                "startOffer": {
                  "type": "string"
                },
                "endOffer": {
                  "type": "string"
                },
                "noDecissionTriggers": {
                  "type":"string"
                },
                "options": {
                  "oneOf": [
                    {
                      "type": "object",
                      "properties": {
                        "else": {
                          "type": "array",
                          "items": {
                            "type": "string"
                          }
                        }
                      },
                      "patternProperties": {
                        "if .*": {
                          "type": "array",
                          "items": {
                            "type": "string"
                          }
                        }
                      },
                      "required": [
                        "else"
                      ]
                    },
                    {
                      "type": "array",
                      "items": {
                        "type": "string"
                      }
                    }
                  ]
                }
              }
            },
            {
              "properties": {
                "type": {
                  "const": "mathConversation"
                },
                "name": {
                  "type": "string"
                },
                "format": {
                  "type": "string"
                },
                "assets": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                },
                "marker": {
                  "type": "string"
                },
                "description": {
                  "type": "string"
                },
                "mathTopic": {
                  "type": "object",
                  "properties": {
                    "name": {
                      "type": "string"
                    },
                    "level": {
                      "type": "string",
                      "enum": [
                        "beginner",
                        "intermediate",
                        "advanced",
                        "expert"
                      ]
                    }
                  },
                  "required": [
                    "name",
                    "level"
                  ]
                }
              },
              "required": [
                "mathTopic"
              ]
            }
          ]
        }
      ],
      "required": [
        "type"
      ]
    }
  }
}