{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "properties": {
    "$schema": {
      "type": "string"
    },
    "userInput": {
      "type": "string",
      "default": ""
    },
    "trialsCount": {
      "type": "number",
      "minimum": 1,
      "default": 3
    },
    "categorizationThreshold": {
      "type": "number",
      "exclusiveMinimum": 0,
      "maximum": 1,
      "default": 0.85
    },
    "generalContext": {
      "type": "string"
    },
    "intents": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "examples": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        },
        "required": [
          "id"
        ],
        "additionalProperties": false
      }
    }
  },
  "required": [
    "intents"
  ],
  "additionalProperties": false
}