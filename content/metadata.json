{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "metadata": {
      "type": "object",
      "properties": {
        "title": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "tags": {
          "$ref": "./tags-list.json"
        },
        "icon": {
          "type": "string"
        },
        "thumbnail_url": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "required": [
        "title",
        "description",
        "tags"
      ]
    },
    "suggestedNewTags": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "tag": {
            "type": "string"
          },
          "reasonWhy": {
            "type": "string"
          }
        },
        "additionalProperties": false,
        "required": [
          "tag",
          "reasonWhy"
        ]
      }
    }
  }
}